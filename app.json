{
  "expo": {
    "name": "FinZen",
    "slug": "FinZen",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.svg",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/logo.svg",
      "resizeMode": "contain",
      "backgroundColor": "#0F172A"
    },
    "assetBundlePatterns": [
      "assets/images/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": ["expo-router", "expo-image-picker"],
    "experiments": {
      "typedRoutes": true
    },
    "android": {
      "package": "com.finzen.app"
    }
  }
}
